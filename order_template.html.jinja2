<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body>
    <div class="shadow min-vh-100 p-3 text-center">
        <div class="row">
            {% for info in informations %}
            <div class="col-3 ps-3 pb-5">
                <div class="row border">
                    <div class="col">
                        <p class="font-weight-light">
                            Comanda de Pedido
                            <br>
                            Centro Espirita Caminho, Verdade e Vida
                        </p>
                    </div>
                </div>
                <div class="row border">
                    <div class="col">
                        <p class="fw-bold">{{info.name}}</p>
                    </div>
                </div>
                {% for category in categories %}
                <div class="row border">
                    <div class="col">
                        <p class="fw-bold">{{category}}</p>
                    </div>
                </div>
                
                {% for item in info.getCategory(category) %}
                <div class="row border">
                    <div class="col-2 item">
                        <p>{{item.qnt}}</p>
                    </div>
                    <div class="col-10 border-left item-name text-start">
                        <p class="fw-bold">{{item.name}}</p>
                    </div>
                </div>
                {% endfor %}
                {% endfor %}
            </div>
            {% endfor %}
        </div>
    </div>

    <style>
        .item {
            border-right: 0.1rem solid black;
        }
        
        .item-name {
            padding-right: 0;
        }

        .pb-6 {
            padding-bottom: 4rem!important;
        }

        div > .border {
            border: 0.1rem solid black !important;
        }

        p {
            font-size: 0.8rem;
            margin-top: 0;
            margin-bottom: 0;
        }

        body {
            margin-left: auto;
            margin-right: auto;
            height:210mm;
            width:297mm;
        }
    </style>
</body>
